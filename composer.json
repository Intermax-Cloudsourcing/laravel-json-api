{
    "name": "intermax/laravel-api",
    "description": "Reusable filters, resources and other API tools.",
    "keywords": ["api", "json:api", "laravel"],
    "authors": [
        {
            "name": "Patrick Hoogkamer",
            "email": "p.hoogkamer@intermax.nl"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-json": "*",
        "intermax/laravel-open-api": "~0.4",
        "laravel/framework": "^8.0",
        "spatie/laravel-query-builder": "^3.0"
    },
    "require-dev": {
        "intermax/php-integration-tools": "^3.0",
        "orchestra/testbench": "^6.6",
        "nunomaduro/collision": "^5.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Intermax\\LaravelApi\\Tests\\": "tests"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Intermax\\LaravelApi\\": "src/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    },
    "scripts": {
        "lint": "php-cs-fixer fix -v",
        "test:types": "phpstan analyse --ansi",
        "test:unit": "phpunit --colors=always",
        "test:lint": "php-cs-fixer fix -v --dry-run",
        "test": [
            "@test:unit"
        ]
    },
    "repositories": {
        "intermax": {
            "type": "composer",
            "url": "https://development.intermax-pages.nl/tools/composer-repository/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Intermax\\LaravelApi\\ServiceProvider"
            ]
        }
    }
}
